{
  /* ÍNICIO das configurações principais */

  "editor.fontFamily": "Cascadia code", // Fonte do editor de código
  "editor.fontLigatures": true, // Sinal apresentados de forma diferente. Ex: 8 != 0; =>
  "explorer.compactFolders": false, // Não mostrar o caminho das pastas de forma compactada. Ex: database\dbcode\code.sql
  "editor.minimap.enabled": true, // Retirar o mini mapa do editor de código
  "editor.wordWrap": "on", // Quebrar palavras para baixo,

  "explorer.fileNesting.enabled": true, // Habilitar o padrão de agrupamento de arquivos. Ex: package.json/package-lock.json

  // Configuração do padrão de agrupamento de arquivos.
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "eslint*, .eslint*, vite, prettier*, tsconfig*, package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "tailwind.config*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },

  // Renomear a abertura e fechamento da tag
  "javascript.preferences.renameMatchingJsxTags": true,
  "typescript.preferences.renameMatchingJsxTags": true,
  "workbench.iconTheme": "monospace-icons",

  "editor.scrollbar.vertical": "hidden",
  "workbench.statusBar.visible": false,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "window.zoomLevel": 1,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "debug.disassemblyView.showSourceCode": false,
  "symbols.hidesExplorerArrows": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "toggle",

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.editorAssociations": {
    "*.sqlite": "default"
  },
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Monospace Dark"

  // Configuração para o Linux
  // ,"terminal.integrated.defaultProfile.linux": "bash" // Configuração para o terminal do vscode ser o bash
}
