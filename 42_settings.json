{
    // 42 configurations
    "workbench.colorTheme": "Monospace Dark",
    "workbench.iconTheme": "monospace-icons",
    "42header.email": "marvin@42.fr", // Configurar também para o username
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "terminal.integrated.env.linux": {
        "PATH": "/var/data/python/bin:${env:PATH}"
    },
    /*
    // Configuração da extensão '42 C-Format' para indentação ao salvar arquivo
    "[c]": {
        "editor.defaultFormatter": "keyhr.42-c-format"
    },
    */
    /* ÍNICIO das configurações principais */
    "editor.fontFamily": "Cascadia code", // Fonte do editor de código
    "explorer.compactFolders": false, // Não mostrar o caminho das pastas de forma compactada. Ex: database\dbcode\code.sql
    "editor.minimap.enabled": true, // Retirar o mini mapa do editor de código
    "editor.wordWrap": "on", // Quebrar palavras para baixo
    
    // Renomear a abertura e fechamento da tag
    "javascript.preferences.renameMatchingJsxTags": true,
    "typescript.preferences.renameMatchingJsxTags": true,
    
    "editor.scrollbar.vertical": "hidden",
    "workbench.statusBar.visible": false,
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "window.zoomLevel": 1,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "debug.disassemblyView.showSourceCode": false,
    "symbols.hidesExplorerArrows": false,
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "window.menuBarVisibility": "toggle",
    "editor.formatOnSave": true,
    "workbench.editorAssociations": {
        "*.sqlite": "default"
    },
    "workbench.activityBar.location": "top",
}
